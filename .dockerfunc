# Comandos personalizados para ejecutar la aplicacion con docker y otras

alias composer='docker run --rm --interactive --tty --volume $PWD:/app composer'
alias php='docker run -it --rm --name my-running-script -v $PWD:/usr/src/myapp -w /usr/src/myapp php:7.4-cli php'
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
